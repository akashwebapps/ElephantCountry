<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context=".DashBordActivity">

    <include layout="@layout/toolbar_profile"></include>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:background="@color/purple_200"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <RelativeLayout
                      android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_totalsale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Total Sale"
                            android:textStyle="bold"
                            android:textColor="@color/shipped_status_bg"></TextView>



                        <TextView
                            android:padding="2dp"
                            android:layout_below="@id/tv_totalsale"
                            android:id="@+id/tv_totalsalers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="22sp"
                            android:text="@string/rupees"
                            android:textStyle="bold"
                            android:textColor="@color/white"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/tv_todaysale"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Total Sale"
                            android:textStyle="bold"
                            android:textColor="@color/shipped_status_bg"></TextView>



                        <TextView
                            android:padding="2dp"
                            android:layout_below="@id/tv_todaysale"
                            android:id="@+id/tv_todaysalers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="@string/rupees"
                            android:fontFamily="@font/roboto_regular"
                            android:textStyle="bold"
                            android:textColor="@color/white"></TextView>






                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/cardshadow"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/green_circle"
                            ></ImageView>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">




                        <TextView
                           android:layout_above="@id/tv_totalunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="27600"
                            android:padding="2dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"></TextView>


                        <TextView
                            android:padding="2dp"
                            android:id="@+id/tv_totalunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:text="Total Utin Sold"
                            android:textColor="@color/tracking_black"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                         android:layout_alignParentRight="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">




                        <TextView
                           android:layout_above="@id/tv_totalunittoday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="2dp"
                            android:text="23"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"></TextView>


                        <TextView
                            android:id="@+id/tv_totalunittoday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:padding="2dp"
                            android:text="Total Utin Sold"
                            android:textColor="@color/tracking_black"></TextView>

                    </RelativeLayout>







                    <RelativeLayout
                        android:id="@+id/card_bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/light_gray">
                        </View>

                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="View Statistic"
                            android:textColor="@color/purple_200"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                            ></TextView>


                    </RelativeLayout>



                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Detail Information"
                    android:textColor="@color/purple_200"></TextView>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/stock"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                       android:layout_marginLeft="15dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/trend"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Stock"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Sale"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/discount"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Sale"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Alert"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/warning"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Alert"
                            android:padding="5dp"
                            android:textColor="@color/tracking_black"
                            android:textSize="15sp"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Trending"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                       android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/trending"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Trending"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Graphical representation of Sales"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/purple_200"></TextView>




                <include layout="@layout/layout_graph"></include>


            </LinearLayout>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>