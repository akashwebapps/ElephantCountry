<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context=".DashBordActivity">

    <include layout="@layout/toolbar_profile"></include>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:background="@color/purple_200"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_totalsale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:padding="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Total Sale"
                                android:textStyle="bold"
                                android:textColor="@color/shipped_status_bg"></TextView>



                            <TextView
                                android:padding="2dp"
                                android:layout_below="@id/tv_totalsale"
                                android:id="@+id/tv_totalsalers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="23sp"
                                android:text="@string/rupees"
                                android:textStyle="bold"
                                android:textColor="@color/white"></TextView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/tv_todaysale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="5dp"
                                android:text="Today's Sale"
                                android:textColor="@color/shipped_status_bg"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>



                            <LinearLayout
                                android:gravity="end"
                                android:layout_below="@id/tv_todaysale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">




                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/capsul_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_1sdp"
                                    android:paddingBottom="@dimen/_1sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_up_24"
                                    ></TextView>


                                <TextView
                                    android:gravity="end"
                                    android:layout_gravity="end"
                                    android:id="@+id/tv_todaysalers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="2dp"
                                    android:text="@string/rupees15800"
                                    android:textColor="@color/white"
                                    android:textSize="23sp"
                                    android:textStyle="bold"></TextView>

                            </LinearLayout>



                        </RelativeLayout>


                    </LinearLayout>




                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/cardshadow"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/green_circle"
                            ></ImageView>

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">




                        <TextView
                           android:layout_above="@id/tv_totalunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:text="27600"
                            android:padding="2dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"></TextView>


                        <TextView
                            android:padding="2dp"
                            android:id="@+id/tv_totalunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="15sp"
                            android:text="Total Units Sold"
                            android:textColor="@color/tracking_black"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                         android:layout_alignParentRight="true"
                        android:layout_above="@id/card_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">




                        <TextView
                            android:layout_above="@id/ttt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/roboto_regular"
                            android:padding="2dp"
                            android:text="23"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"></TextView>


                        <TextView
                            android:id="@+id/ttt"
                          android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="15sp"
                            android:padding="2dp"
                            android:text="Units Sold Today"
                            android:textColor="@color/tracking_black"></TextView>

                    </RelativeLayout>







                    <RelativeLayout
                        android:id="@+id/card_bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/light_gray">
                        </View>

                        <TextView
                            android:id="@+id/statistic"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="View Statistic"
                            android:textColor="@color/purple_200"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                            ></TextView>


                    </RelativeLayout>



                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Detail Information"
                    android:textColor="@color/purple_200"></TextView>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/stock"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                       android:layout_marginLeft="15dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/stock_report"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Stock"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Sale"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/sale_report"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Sale"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Alert"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/stock_alert"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Alert"
                            android:padding="5dp"
                            android:textColor="@color/tracking_black"
                            android:textSize="15sp"></TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Trending"
                        android:background="@drawable/card_shadow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                       android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/trending_report"
                            android:padding="5dp"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:text="Trending"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/tracking_black"></TextView>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:text="Graphical representation of Sales"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/purple_200"></TextView>




                <include layout="@layout/layout_graph"></include>


            </LinearLayout>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>